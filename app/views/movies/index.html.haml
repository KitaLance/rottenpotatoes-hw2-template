-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :getï¼Œ :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    -# (i) how to figure out which boxes the user checked
    = check_box_tag "ratings[#{rating}]", 1, @checked_ratings.include?(rating)
  = submit_tag 'Refresh', :id => "ratings_submit"
  
%table#movies
  %thead
    %tr
      -#%th Movie Title
      %th{class: @title_sort}= link_to 'Movie Title', movies_path(sort: 'title')
      %th Rating
      -#%th Release Date
      %th{class: @release_date_sort}= link_to 'Release Date', movies_path(sort: 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path